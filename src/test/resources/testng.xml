<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Cucumber Suite" parallel="tests" thread-count="3">
    <!-- UI Tests -->
    <test name="UI Tests">
        <classes>
            <class name="runners.UiTestRunnerTestCase"/>
        </classes>
    </test>

    <!-- API Tests -->
    <test name="API Tests">
        <classes>
            <class name="runners.ApiTestRunnerTestCase"/>
        </classes>
    </test>

    <!-- DB Tests -->
    <test name="DB Tests">
        <classes>
            <class name="runners.DbTestRunnerTestCase"/>
        </classes>
    </test>
</suite>